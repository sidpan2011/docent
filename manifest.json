{
    "manifest_version": 3,
    "name": "Docent",
    "version": "0.1.0",
    "description": "Your guide through developer documentation and learning paths",
    "permissions": [
        "popups",
        "sidePanel",
        "storage",
        "activeTab",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "side_panel": {
        "default_path": "sidepanel/sidepanel.html"
    },
    "action": {
        "default_title": "Docent - Your Documentation Guide"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}